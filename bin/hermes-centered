#!/usr/bin/env bash

# Launch hermes in a centered Ghostty window

HS="/Users/anthony/Developer/bin/hs"

# Use smaller window for app launcher mode, larger for general hermes
if [[ "$1" == "apps" ]]; then
    WIDTH=80
else
    WIDTH=100
fi

# Open Ghostty with hermes, passing through any arguments
open -na ghostty --args --window-width=$WIDTH --window-height=32 -e /Users/anthony/dotfiles/bin/hermes "$@"

# Wait for window to appear and be ready
sleep 0.6

# Center the window using Hammerspoon
"$HS" -c 'local win = hs.window.focusedWindow(); if win then win:centerOnScreen() end' 2>/dev/null
