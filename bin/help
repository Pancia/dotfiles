#!/usr/bin/env ruby

require 'tempfile'

if ARGV.empty?
    items = %x[ ag "^function [^_].*|^alias .*" --nofilename --nobreak -o ~/dotfiles/fish/**/*.fish ]
        .gsub(/^(function|alias) /, "")
    tmp = Tempfile.new
    IO.write tmp, items
    to_run = %x[ cat #{tmp.path} | sort | fish -c 'search' ]
        .gsub(/='[^']+'/, "")
        .gsub(/{.*/, "")
        .gsub(/\]7;.*/, "")
        .gsub("\n", "")
    exec "fish -c '#{to_run}'" if not to_run.empty?
else
    tmp = Tempfile.new
    %x[ fish -c 'cheat #{ARGV.join " "} > #{tmp.path}' ]
    exec %[ less -n #{tmp.path} ]
end
