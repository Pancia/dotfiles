#!/usr/bin/env bash
# VPC - Workspace Setup Script
# Wrapper for vpc.py (Python implementation)

# Log the arguments
echo "arguments: $@" >> ~/.log/services/automator_vpc.log

# Run vpc.py and log all output while preserving stderr for Automator
"$HOME/dotfiles/bin/vpc.py" "$@" 2>&1 | tee -a ~/.log/services/automator_vpc.log >&2
exit ${PIPESTATUS[0]}
