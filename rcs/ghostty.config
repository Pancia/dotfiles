#<[.config/ghostty/config]>

# Font configuration
font-size = 24
font-family = "MesloLGS Nerd Font Mono"

# Background transparency
background-opacity = 0.85

# Window size (columns x rows)
window-width = 100
window-height = 35

# Terminal compatibility - fix Shift+Enter and other key encodings
keybind = shift+enter=text:\x0a

# General terminal settings
command = /opt/homebrew/bin/fish
shell-integration = fish
shell-integration-features = cursor,sudo,title

# Theme/appearance
theme = light:Xcode Light,dark:Atom One Dark
cursor-style = block

# Performance
copy-on-select = true
